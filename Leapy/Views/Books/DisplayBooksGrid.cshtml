@model List<Leapy.Models.Book>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DisplayBooksGrid</title>
    <style>
        .book-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }

        .book-item {
            border: 1px solid #ccc;
            padding: 10px;
        }

        .title {
            font-size: 15px;
        }

        .price {
            color: green;
        }
    </style>
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">Books</h1>
        <br />
    </div>
    <div class="book-grid">
        @foreach (var book in Model)
        {
            <div class="book-item">
                <a class="clickable" href="/Books/Details/@book.UPC">
                    <img class="phone-image" src="@book.ImageUrl" />
                    <h2 class="title">@book.Title</h2>
                    <p class="price">$@book.Price</p>
                </a>

                <div class="buttons">
                    <form method="post" action="/Favorite/AddFavoriteBook">
                        <input type="hidden" name="ArtNr" value="@book.UPC" />
                        <button class="add" type="submit">Add to Favorites</button>
                    </form>
                </div>
            </div>
        }
    </div>
</body>
</html>